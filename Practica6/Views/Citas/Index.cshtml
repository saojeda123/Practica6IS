@model IEnumerable<Practica6.Models.Cita>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medico)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medico.Especialidad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CitaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CitaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CitaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
